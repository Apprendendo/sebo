{% extends 'layout/base.twig' %}

{% block page_title %}Sebo Online{% endblock %}
{% block page_subtitle%}Tipos de Produtos{% endblock %}
{% block alert%}Descubra se há o tipo disponível ou cadastre. {%endblock%}

{% block content %}
    <h1 class="mb-4">Tipos de Produto</h1>
        <a href="/sebo/public/tipos/criar" class="button is-link">Novo Tipo</a>
    </div>
    <div class="content">
        {% if tipos|length > 0 %}
            <table class="table is-striped is-fullwidth">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    {% for tipo in tipos %}
                    <tr>
                        <td>{{ tipo.id }}</td>
                        <td>{{ tipo.nome }}</td>
                        <td>
                            <a href="/sebo/public/tipos/editar/{{ tipo.id }}" class="button is-small is-warning">Editar</a>
                            <a href="/sebo/public/tipos/excluir/{{ tipo.id }}" class="button is-small is-danger" onclick="return confirm('Tem certeza?')">Excluir</a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
        <div class="notification is-warning">
            Nenhum tipo cadastrado no momento. Clique em "Novo Tipo" para adicionar um.
        </div>
    {% endif %}
{% endblock %}