{% extends 'layout/base.twig' %}

{% block title %}Produtos - Sebo Online{% endblock %}

{% block content %}
    <h1 class="mb-4">Produtos</h1>
    <a href="./produtos/criar" class="btn btn-primary mb-3">Novo Produto</a>
    
    <table class="table table-striped">
    <thead>
        <tr>
            <th>Título</th>
            <th>Autor</th>
            <th>Ano</th>
            <th>Tipo</th>
            <th>Estado</th>
            <th>Preço</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        {% for produto in produtos %}
        <tr>
            <td>{{ produto.titulo }}</td>
            <td>{{ produto.autor }}</td>
            <td>{{ produto.ano_publicacao }}</td>
            <td>{{ produto.tipo_nome }}</td>
            <td>{{ produto.estado }}</td>
            <td>R$ {{ produto.preco|number_format(2, ',', '.') }}</td>
            <td>
                <!-- Ações permanecem iguais -->
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}