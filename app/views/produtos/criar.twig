{% extends 'layout/base.twig' %}

{% block title %}Novo Produto - Sebo Online{% endblock %}

{% block content %}
    <h1 class="mb-4">Novo Produto</h1>
    <form action="/sebo/public/produtos/criar" method="POST">
    <div class="mb-3">
        <label>Tipo de Produto</label>
        <select name="tipo_id" class="form-select" required>
            {% for tipo in tipos %}
            <option value="{{ tipo.id }}">{{ tipo.nome }}</option>
            {% endfor %}
        </select>
    </div>
    <div class="mb-3">
        <label>Ano de Publicação</label>
        <input type="number" name="ano_publicacao" class="form-control" required>
    </div>
        <div class="mb-3">
            <label class="form-label">Título</label>
            <input type="text" name="titulo" class="form-control" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Autor</label>
            <input type="text" name="autor" class="form-control" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Preço</label>
            <input type="number" step="0.01" name="preco" class="form-control" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Condição</label>
            <select name="condicao" class="form-select" required>
                <option value="Novo">Novo</option>
                <option value="Usado - Como novo">Usado - Como novo</option>
                <option value="Usado - Bom estado">Usado - Bom estado</option>
                <option value="Usado - Desgastado">Usado - Desgastado</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Salvar</button>
    </form>
{% endblock %}