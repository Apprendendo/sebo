{% extends 'layout/base.twig' %}

{% block page_title %}Sebo Online{% endblock %}
{% block page_subtitle%}Login{% endblock %}
{% block alert%}Informe os dados para fazer o login {%endblock%}

{% block content %}
    <form action="/sebo/public/login" method="POST">
        <div class="field">
            <label class="label">E-mail</label>
            <div class="control">
                <input class="input" type="email" name="email" placeholder="E-mail" required>
            </div>
            <p class="help">Insira um <strong>e-mail válido</strong>.</p>
        </div>
        <div class="field">
            <label class="label">Senha</label>
            <div class="control">
                <input class="input" type="password" name="senha" placeholder="Senha" required>
            </div>
            <p class="help">Insira uma <strong>senha válida</strong>.</p>
        </div>
        <button type="submit" class="button is-success">Entrar</button>
        <button type="submit" class="button is-link">Cadastrar</button>
    </form>
{% endblock %}

